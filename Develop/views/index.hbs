{{#each post_data_plain}}
<section>
  <div class="box">
    <a href="/post/{{id}}">
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <div class="content">

                <div class="columns">
                  <div class="column is-one-third">
                    <p class="title is-4">{{title}}</p>
                  </div>
                  <div class="column"></div>
                  <div class="column">
                    <p class="subtitle is-6 ">written by {{user.name}} on {{formatDate createdAt}}</p>
                  </div>
                </div>
                <p class="title is-4">{{content}}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </a>
  </div>
</section>
{{/each}}

