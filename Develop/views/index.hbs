
 {{#each post_data_plain}}
  <section>
    <a href="/post/{{id}}">
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <div class="content">
              <p class="title is-4">{{title}}</p>
              <p class="title is-4">{{content}}</p>
              <p class="subtitle is-4">Created by: {{user.name}}</p>
              <p class="subtitle is-4">Created at: {{formatDate createdAt}}</p> <!-- Display the createdAt value -->
            </div>
          </div>
        </div>
      </div>
    </div>
    </a>
  </section>
{{/each}}

